# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.gradle]
indent_style                = tab
tab_width                   = 4

[*.java]
indent_style                = space
indent_size                 = 4
max_line_length             = 120
